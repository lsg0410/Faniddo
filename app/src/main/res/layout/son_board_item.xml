<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/son_board_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/son_board_writer"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/son_board_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/son_board_regdate"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/son_board_title"
        android:layout_toRightOf="@+id/son_board_writer"
        android:layout_toEndOf="@+id/son_board_writer"
        android:textColor="#000000" />

</RelativeLayout>