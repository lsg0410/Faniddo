<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DDDDFF">

    <android.support.v7.widget.CardView
        android:id="@+id/flistcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDFF"
            android:padding="12dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/falistimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/profile"
                app:border_color="#ffffff"
                app:border_width="1dp" />
            <TextView
                android:id="@+id/falistname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/falistmid"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/falistimg"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/falistimg" />

            <TextView
                android:id="@+id/falistmid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/falistimg"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/flistimg" />

            <TextView
                android:id="@+id/falistemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/falistname"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/falistimg"
                android:layout_toEndOf="@+id/falistimg" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>